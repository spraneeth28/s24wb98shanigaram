extends layout

block content
  h1= title
  p Number of rows #{query.rows}
  p Number of columns #{query.cols}

  - let rows=Number(query.rows)
  - let cols=Number(query.cols)

  if !(Number.isInteger(rows)) && !(Number.isInteger(cols))
    p Rows or columns with errors 
  else if (rows<1) && (rows>3)
    p The rows exceed the allowable range.
  else if (cols<1) && (cols>13)
    p The columns exceed the acceptable range.
  else
   table#outer
     - for(let i=0; i<rows; i++){
        tr#middle
         - for(let j=0; j<cols; j++){
            if(i==j)
                td 1
            else if ((i == j + 1))
                td 2
            else if (i === j - 1)
                td #{i}
            else 
                td 0
         -}
     -}

